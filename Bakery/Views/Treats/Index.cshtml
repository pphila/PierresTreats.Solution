@{
  Layout="_Layout";
}

@using Bakery.Models;

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>Add A Treat!</h3>
}
else
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
}
<hr/>
<p>@Html.ActionLink("Add a new treat", "Create") | @Html.ActionLink("Flavors", "Index", "Flavors")</p>