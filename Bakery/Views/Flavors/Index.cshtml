@{
  Layout="_Layout";
}

@using Bakery.Models

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>There are no flavors created yet.</h3>
}
else
{
  <ul>
    @foreach(Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Type}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}

<hr/>

<div class="bottom-nav">
  <p>@Html.ActionLink("Add New Flavor", "Create") | @Html.ActionLink("Treats List", "Index", "Treats")</p>
</div>