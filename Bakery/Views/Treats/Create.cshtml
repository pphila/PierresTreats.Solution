@{
  Layout="_Layout";
}

@model Bakery.Models.Treat

<h1>Add A New Treat</h1>

@using (Html.BeginForm())
{
  <p>@Html.ValidationMessageFor(model => model.Name, "", new { @style = "font-weight: 600; color: red;"})</p>
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Description)
  @Html.TextAreaFor(model => model.Description)

  @Html.LabelFor(model => model.Quantity)
  @Html.TextBoxFor(model => model.Quantity)

  <input type="submit" value="Add new treat" class="btn btn-danger"/>
}

<p>@Html.ActionLink("Treats List", "Index") | @Html.ActionLink("Flavors List", "Index", "Flavors")</p>